 {
  "name": "FT.KRC",
  "manifest_version": 2,
  "description": "Kippt Reading Companion",
  "homepage_url": "https://blog.fototropik.com",
  "version": "0.0.1",
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["css/ft-krc-shell.css"],
        "js": ["js/jquery-1.9.1.min.js", "js/ft-krc-injection.js", "js/kippt-content.js"],
        "run_at" : "document_start"
      }
    ],

  "content_security_policy": "script-src 'self'; object-src 'self'",
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "commands": {
    "toggle-ft-krc": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Toggle overlay"
    }
  },
  "browser_action": {
    "default_title": "Open ft-krc",
    "default_icon": {
      "19"  : "img/icon_19.png",
      "38"  : "img/icon_38.png"
    }
  },
  "icons": {
    "16"  : "img/icon_16.png",
    "48"  : "img/icon_48.png",
    "128" : "img/icon_128.png"
  },
  "web_accessible_resources": [
    "ft-krc.html",
    "css/bootstrap.min.css",
    "css/ft-krc.css",
    "css/ft-krc-shell.css",
    "js/jquery-1.9.1.min.js",
    "js/bootstrap.min.js",
    "js/ft-krc-internal.js",
    "js/ft-krc-injection.js",
    "img/twinkle_twinkle_bg.png",
    "img/icon_48.png",
    "fonts/glyphicons-halflings-regular.eot",
    "fonts/glyphicons-halflings-regular.svg",
    "fonts/glyphicons-halflings-regular.ttf",
    "fonts/glyphicons-halflings-regular.woff"
  ]
}
